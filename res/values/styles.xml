<resources>

    <style name="Theme.Threecolors" parent="@android:style/Theme.Holo">
        <item name="android:actionBarItemBackground">@drawable/selectable_background_threecolors</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Threecolors</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Threecolors</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Threecolors</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Threecolors</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Threecolors</item>
        <item name="android:actionBarTabTextStyle">@style/ActionBar.TabText</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_threecolors</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_threecolors</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Threecolors</item>
    </style>

    <style name="ActionBar.Solid.Threecolors" parent="@android:style/Widget.Holo.ActionBar.Solid">
        <item name="android:background">@drawable/ab_solid_threecolors</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_threecolors</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_threecolors</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Threecolors</item>
    </style>

    <style name="ActionBar.Transparent.Threecolors" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@drawable/ab_transparent_threecolors</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Threecolors</item>
    </style>

    <style name="ActionBar.TabText" parent="@android:style/Widget.Holo.ActionBar.TabText">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="PopupMenu.Threecolors" parent="@android:style/Widget.Holo.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_threecolors</item>
    </style>

    <style name="DropDownListView.Threecolors" parent="@android:style/Widget.Holo.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_threecolors</item>
    </style>

    <style name="ActionBarTabStyle.Threecolors" parent="@android:style/Widget.Holo.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_threecolors</item>
    </style>

    <style name="DropDownNav.Threecolors" parent="@android:style/Widget.Holo.Spinner">
        <item name="android:background">@drawable/spinner_background_ab_threecolors</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_threecolors</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_threecolors</item>
    </style>

    <style name="ProgressBar.Threecolors" parent="@android:style/Widget.Holo.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_threecolors</item>
    </style>

    <style name="ActionButton.CloseMode.Threecolors" parent="@android:style/Widget.Holo.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_threecolors</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Threecolors.Widget" parent="@android:style/Theme.Holo">
        <item name="android:popupMenuStyle">@style/PopupMenu.Threecolors</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Threecolors</item>
    </style>

    <style name="MovieTitle">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">@color/title_text_color</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

</resources>